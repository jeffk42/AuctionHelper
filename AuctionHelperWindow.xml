<GuiXml>
    <Controls>
        <TopLevelControl name="ScrollListExampleMainWindow" movable="true" mouseEnabled="true" clampedToScreen="true" hidden="true" resizeHandleSize="8" tier="MEDIUM">
            <OnUpdate>
                local w, h = self:GetDimensions()
                if ((self.currentWidth ~= w) or (self.currentHeight ~= h)) then
                self.currentWidth = w
                self.currentHeight = h
                if(self.onResize) then
                    self.onResize()
                end
                end
