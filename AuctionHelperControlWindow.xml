<GuiXml>
    <Controls>
        <TopLevelControl name="AuctionHelperControlWindow" movable="true" mouseEnabled="true" clampedToScreen="true" hidden="true" resizeHandleSize="8" tier="MEDIUM">
            <OnUpdate>
                local w, h = self:GetDimensions()
                if ((self.currentWidth ~= w) or (self.currentHeight ~= h)) then
                self.currentWidth = w
                self.currentHeight = h
                if(self.onResize) then
                    self.onResize()
                end
                end

            </OnUpdate>
            <Anchor point="TOPRIGHT" relativeTo="GuiRoot" relativePoint="TOPRIGHT" offsetX="-128" offsetY="128"/>
            <Dimensions x="600" y="384" />
            <Controls>
                <Backdrop name="$(parent)BG" inherits="ZO_ThinBackdrop" />
                <Label name="$(parent)Heading" font="ZoFontWindowTitle" color="CFDCBD" wrapMode="ELLIPSIS"
                    verticalAlignment="CENTER" text="Auction Helper Control Window">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="16" offsetY="10"/>
                </Label>
                <Button name="$(parent)CloseButton" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="CENTER">
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-20" offsetY="20" />
                    <Dimensions x="48" y="48" />
                    <Textures normal="/esoui/art/hud/radialicon_cancel_up.dds" mouseOver="/esoui/art/hud/radialicon_cancel_over.dds" />
                    <OnClicked>
                    AuctionHelperControlWindow:SetHidden(true)
                    </OnClicked>
                </Button>
                <Control name="$(parent)LotList" inherits="ZO_ComboBox">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Heading" relativePoint="BOTTOMLEFT" offsetY="8" />
                    <!-- <Anchor point="BOTTOMRIGHT" offsetY="-40" offsetX="-3" /> -->
                    <Dimensions x="400" />
                    <OnInitialized>
                        ZO_ComboBox:New(self)
                    </OnInitialized>
                </Control>
                <Button name="$(parent)ShowLotButton" inherits="ZO_DefaultButton" text="Stage Up Lot Post">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)LotList" relativePoint="BOTTOMLEFT"
                        offsetY="12" offsetX="0" />
                    <Dimensions x="250" />
                    <OnClicked>
                        stageNewLot()
                    </OnClicked>
                </Button>
                <Button name="$(parent)StartBidButton" inherits="ZO_DefaultButton" text="Stage Up Starting Bid">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)ShowLotButton" relativePoint="BOTTOMLEFT"
                        offsetY="12" offsetX="0" />
                    <Dimensions x="250" />
                    <OnClicked>
                        stageStartingBid()
                    </OnClicked>
                </Button>
                <Button name="$(parent)LastCallButton" inherits="ZO_DefaultButton" text="Stage Up Last Call">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)StartBidButton" relativePoint="BOTTOMLEFT"
                        offsetY="12" offsetX="0" />
                    <Dimensions x="250" />
                    <OnClicked>
                        stageLastCall()
                    </OnClicked>
                </Button>
                <Button name="$(parent)LastCallEstButton" inherits="ZO_DefaultButton" text="Stage Up Last Call (Est)">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)LastCallButton" relativePoint="BOTTOMLEFT"
                        offsetY="12" offsetX="0" />
                    <Dimensions x="250" />
                    <OnClicked>
                        stageLastCallWithEstimated()
                    </OnClicked>
                </Button>
                <Button name="$(parent)GoingOnceButton" inherits="ZO_DefaultButton" text="Stage Up Going Once">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)LastCallEstButton" relativePoint="BOTTOMLEFT"
                        offsetY="12" offsetX="0" text="Stage Up Going Once" />
                    <Dimensions x="250" />
                    <OnClicked>
                        stageGoingOnce()
                    </OnClicked>
                </Button>
                <Button name="$(parent)GoingTwiceButton" inherits="ZO_DefaultButton" text="Stage Up Going Twice">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)GoingOnceButton" relativePoint="BOTTOMLEFT"
                        offsetY="12" offsetX="0" />
                    <Dimensions x="250" />
                    <OnClicked>
                        stageGoingTwice()
                    </OnClicked>
                </Button>
                <Button name="$(parent)SoldButton" inherits="ZO_DefaultButton" text="Stage Up Sold">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)GoingTwiceButton" relativePoint="BOTTOMLEFT"
                        offsetY="12" offsetX="0" />
                    <Dimensions x="250" />
                    <OnClicked>
                        stageSoldMessage()
                    </OnClicked>
                </Button>
                <Label name="$(parent)CurrentLotLabel" font="ZoFontGame" color="CFDCBD" wrapMode="ELLIPSIS"
                    verticalAlignment="CENTER" text="Current Lot:">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)ShowLotButton" relativePoint="TOPRIGHT" offsetX="16" offsetY="0"/>
                </Label>
                <Label name="$(parent)LotNumLabel" font="ZoFontGame" color="CFDCBD" wrapMode="ELLIPSIS"
                    verticalAlignment="CENTER" text="">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)CurrentLotLabel" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="15"/>
                </Label>
                <Label name="$(parent)LotNameLabel" font="ZoFontGame" color="CFDCBD" wrapMode="ELLIPSIS"
                    verticalAlignment="CENTER" text="">
                   <Anchor point="TOPLEFT" relativeTo="$(parent)LotNumLabel" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="5"/>
                </Label>
                <Label name="$(parent)EstimatedLabel" font="ZoFontGame" color="CFDCBD" wrapMode="ELLIPSIS"
                    verticalAlignment="CENTER" text="">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)LotNameLabel" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="5"/>
                </Label>
                <Label name="$(parent)MinimumLabel" font="ZoFontGame" color="CFDCBD" wrapMode="ELLIPSIS"
                    verticalAlignment="CENTER" text="">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)EstimatedLabel" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="5"/>
                </Label>
                <Label name="$(parent)CurrentBidderLabel" font="ZoFontGame" color="CFDCBD" wrapMode="ELLIPSIS"
                    verticalAlignment="CENTER" text="">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)MinimumLabel" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="5"/>
                </Label>
                <Label name="$(parent)CurrentBidLabel" font="ZoFontGame" color="CFDCBD" wrapMode="ELLIPSIS"
                    verticalAlignment="CENTER" text="">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)CurrentBidderLabel" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="5"/>
                </Label>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>